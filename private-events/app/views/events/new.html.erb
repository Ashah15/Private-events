<div class="row">
		<div class="col">
			 <h2>Create Event</h2>

    	<%= form_for(@event) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :venue %>
      <%= f.text_field :venue, class: 'form-control' %>

      <%= f.label :time %>
      <%= f.text_field :time, class: 'form-control' %>

      <%= f.label :event_date %>
      <%= f.text_field :event_date, class: 'form-control' %>


      <%= f.submit "Save changes", class: "btn btn-primary my-3" %>
    <% end %>
		</div>
	</div>